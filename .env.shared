# Network connectivity - Host ports for inter-VM communication
OMERO_HOST_PORT=4064
OMERO_WEB_HOST_PORT=4063
POSTGRES_HOST_PORT=5432
BIOMERO_POSTGRES_HOST_PORT=5433
BIOMERO_WEB_HOST_PORT=4081
METABASE_HOST_PORT=3001

# External service connection (how BIOMERO connects to OMERO)
EXTERNAL_OMERO_HOST=host.docker.internal
EXTERNAL_OMERO_PORT=4064
EXTERNAL_OMERO_USER=root
EXTERNAL_OMERO_PASSWORD=omero-root-password

# Database settings
POSTGRES_USER=postgres
POSTGRES_DB=omero
POSTGRES_PASSWORD=postgres-password
BIOMERO_POSTGRES_USER=postgres
BIOMERO_POSTGRES_DB=biomero
BIOMERO_POSTGRES_PASSWORD=biomero-password

# OMERO Root password
OMERO_ROOT_PASSWORD=omero-root-password

# BIOMERO Version
NL_BIOMERO_VERSION=latest
BIOMERO_VERSION=v2.0.0-alpha.6

# Metabase settings
METABASE_USER=admin
METABASE_PASSWORD=metabase-password
METABASE_SITE_URL=http://localhost:3001
METABASE_SECRET_KEY=your-secret-key
METABASE_IMPORTS_DB_PAGE_DASHBOARD_ID=1
METABASE_WORKFLOWS_DB_PAGE_DASHBOARD_ID=2

# Forms settings
FORMS_MASTER_USER=forms-user
FORMS_MASTER_PASSWORD=forms-password

# Host mount paths (simulate NFS mounts)
HOST_OMERO_DATA_PATH=./host-mounts/omero-data
HOST_DATABASE_PATH=./host-mounts/database
HOST_BIOMERO_DATABASE_PATH=./host-mounts/database-biomero
HOST_L_DRIVE_PATH=./web/L-Drive